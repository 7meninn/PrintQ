{
  "name": "printq-station",
  "version": "1.0.0",
  "description": "PrintQ Station Client",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.printq.station",
    "productName": "PrintQ Station",
    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true
    },
    "files": [
      "**/*",
      "!dist/*"
    ],
    "asarUnpack": [
      "**/node_modules/pdf-to-printer/**"
    ]
  },
  "author": "PrintQ",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.6.0",
    "node-downloader-helper": "^2.1.9",
    "pdf-to-printer": "^5.6.0"
  },
  "devDependencies": {
    "electron": "^22.3.27",
    "electron-builder": "^24.9.1"
  }
}